{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "@babel/eslint-parser",
  "ignorePatterns": [],
  "extends": ["airbnb-base", "prettier", "plugin:react/recommended", "plugin:jest/recommended"],
  "plugins": ["react", "jest"],
  "rules": {
    "eslint-disable import/extensions": true,
    "no-underscore-dangle": "off",
    "no-console": "off",
    "camelcase": "off",
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}
